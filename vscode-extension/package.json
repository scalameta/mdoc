{
  "name": "mdoc",
  "displayName": "mdoc",
  "description": "Markdown worksheets for Scala",
  "keywords": [
    "scala",
    "lsp",
    "language server"
  ],
  "version": "0.1.0",
  "publisher": "olafurpg",
  "contributors": [
    {
      "name": "Ólafur Páll Geirsson",
      "url": "https://github.com/olafurpg"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/olafurpg/mdoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olafurpg/mdoc.git"
  },
  "homepage": "https://github.com/olafurpg/mdoc",
  "engines": {
    "vscode": "^1.27.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "configuration": {
      "title": "mdoc",
      "properties": {
        "mdoc.serverVersion": {
          "type": "string",
          "default": "0.7.1+11-505b256f+20181227-1253-SNAPSHOT",
          "description": "The mdoc version to use."
        }
      }
    },
    "commands": [
      {
        "command": "mdoc.preview",
        "category": "mdoc",
        "title": "Live preview"
      }
    ]
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "prebuild": "cp ../README.md . && cp ../LICENSE LICENSE.md",
    "build": "vsce package",
    "postbuild": "rm README.md && rm LICENSE.md"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "typescript": "^2.6.1",
    "vsce": "^1.51.6"
  },
  "dependencies": {
    "vscode": "^1.1.21",
    "vscode-languageclient": "^5.1.0"
  },
  "extensionDependencies": []
}
